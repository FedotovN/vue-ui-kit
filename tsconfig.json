{
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"],
    },
    "rootDirs": ["src"],
    "outDir": "dist",
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
    "target": "ES2022",
    "module": "ES6",
    "composite": true,
    "moduleResolution": "Bundler",
    "declarationMap": true,
    "incremental": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "jsx": "preserve",
    "jsxImportSource": "vue",
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
  },
  "include": [
    "./src/**/*",
    "./tests/**/*",
    "src/**/*.vue",
    "./src/components/*.vue",
    "./*.vue",
    "src/**/*.ts",
    "src/***/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "vite.config.js",
  ],
}
