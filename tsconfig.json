{
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"]
    },
    "rootDirs": ["src"],
    "outDir": "dist",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "target": "ES2022",
    "module": "ESNext",
    "composite": true,
    "moduleResolution": "node",
    "declarationMap": true,
    "incremental": true,
    "esModuleInterop": true,
    "types": ["jest", "node", "@types/jest", "jest-dom"],
    "sourceMap": true
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": [
    "./src/**/*",
    "./tests/**/*",
    "src/**/*.vue",
    "./src/components/*.vue",
    "./*.vue",
    "src/**/*.ts",
    "src/***/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}

